{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] [{SourceContext:l}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/audisoft-dev-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext:l}] [{RequestId}] {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(local);Database=AudiSoftSchoolDb;Integrated Security=true;TrustServerCertificate=true;"
  },
  "Jwt": {
    "SecretKey": "AudiSoft_School_JWT_Development_Secret_Key_2024_For_Development_Only_Do_Not_Use_In_Production",
    "Issuer": "AudiSoft.School.Api.Development",
    "Audience": "AudiSoft.School.Client.Development",
    "ExpiryMinutes": 120,
    "RefreshTokenExpiryDays": 30,
    "ClockSkewMinutes": 10
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:8080"
    ]
  }
}
