# UI Configuration
UI_TOAST_DURATION=5000
UI_LOADING_DELAY=300
UI_DEBOUNCE_DELAY=300

# Application Information
APP_NAME=AudiSoft School
APP_VERSION=1.0.0
APP_DESCRIPTION=Sistema de Gestión Escolar

# Development Configuration
DEBUG_MODE=true
LOG_LEVEL=debug